{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h1 class="section-heading">Work on TODO's, or add new ones! ;)</h1><br>
            {% for todo in todos %}
                <div class="todo-div">
                    <span class="todo-id" hidden>{{ todo.id }}</span>
                    <span class="todo-title">{{ todo.title }}
                    </span> <span class="todo-text">{{ todo.text }}
                    </span> <button class="todo-btn pull-right">X</button>
                </div>
            {% endfor%}  
            <br>
            <div class="todo-form">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
{% endblock %}