{% extends 'base.html.twig' %}

{% block body %}
    <div id='carousel-div'>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img class="center-block" src="{{ asset('pictures/carousel/pic1.jpg') }}" alt="Pic1">
                    <div class="carousel-caption">
                        <h3>Nature</h3>
                        <span>&nbsp;I like being outside, running, playing sports and swimming!&nbsp;</span>
                    </div>
                </div>

                <div class="item">
                    <img class="center-block" src="{{ asset('pictures/carousel/pic2.jpg') }}" alt="Pic2">
                    <div class="carousel-caption">
                        <h3>Friends & Family</h3>
                        <span>&nbsp;Hanging out and chill with them is just the best!&nbsp;</span>
                    </div>
                </div>

                <div class="item">
                    <img class="center-block" src="{{ asset('pictures/carousel/pic3.jpg') }}" alt="Pic3">
                    <div class="carousel-caption">
                        <h3>Goaldriven</h3>
                        <span>&nbsp;Even-tempered, I get things done.&nbsp;</span>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}
